---
// Components
import LinkButton from "@components/LinkButton.astro";

// Config
import { SOCIALS } from "@config";
---

<footer class="flex flex-col items-center mx-auto p-12 space-y-3">
    <div class="flex space-x-4">
        {SOCIALS.map((s) => (
            <a title={s.name} href={s.href} target="_blank" rel="noopener noreferrer">
                <img
                    src={s.svgPath}
                    alt={s.name}
                    class="w-6 h-6"
                />
            </a>
        ))}
    </div>

    <div class="text-sm">
        <LinkButton
            text="Domain Public Website"
            href="https://codeberg.org/Erik-Rosenblad/pages/raw/branch/main/LICENSE"
        />
    </div>
</footer>
